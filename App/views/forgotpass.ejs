<%- include("partials/header.ejs") %>
  <body>
    <main>
      <section id="nevbar">
        <nav
          class="navbar navbar-expand-lg"
          aria-label="Eleventh navbar example"
        >
          <div class="container">
            <a class="navbar-brand" href="/"
              ><img class="nav-logo" src="<%= basePath %>images/icons8-book-100.png" alt=""
            /></a>
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarsExample09"
              aria-controls="navbarsExample09"
              aria-expanded="true"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse" id="navbarsExample09">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item nev-hover">
                  <a class="nav-link active" aria-current="page" href="/"
                    >Home</a
                  >
                </li>
              </ul>
              <div class="search-login-container">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 login-btn">
                  <li class="nav-item nev-hover">
                    <a class="nav-link" href="/login">Log in</a>
                  </li>
                </ul>

                <form role="search">
                  <input
                    name="search"
                    id="search"
                    class="form-control search-box"
                    type="search"
                    placeholder="Search"
                    aria-label="Search"
                    oninput="searchBooks()"
                  />
                </form>
              </div>
            </div>
          </div>
        </nav>
      </section>
      <section class="py-3 py-md-5 py-xl-8 login-section flex-grow-1">
        <div class="container">
          <div class="row">
            <div class="col-12 login-text">
              <div class="mb-5">
                <h2 class="display-5 fw-bold text-center">
                  Forgot Your Password
                </h2>
                <p class="text-center m-0">
                  Don't have an account? <a href="/signup">Sign up</a>
                </p>
              </div>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-12 col-lg-10 col-xl-8">
              <div class="row gy-5 justify-content-center">
                <div class="col-12 col-lg-5">
                  <form action="#!">
                    <div class="row gy-3 overflow-hidden">
                      <div class="col-12">
                        <div class="form-floating mb-3">
                          <input
                            type="email"
                            class="form-control border-0 border-bottom rounded-0"
                            name="email"
                            id="email"
                            placeholder="name@example.com"
                            required
                          />
                          <label for="email" class="form-label">Email</label>
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="d-grid">
                          <button
                            class="btn btn-lg btn-dark rounded-0 fs-6"
                            type="submit"
                          >
                            Get Link
                          </button>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <section id="footer">
        <div class="footer">
          <p class="text-center text-body-secondary">Â© <%= new Date().getFullYear()  %> Vatsal</p>
        </div>
      </section>
    </main>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script>
      function searchBooks() {
        const searchInput = document
          .getElementById("search")
          .value.toLowerCase();
        const bookList = document.querySelectorAll(".book-container"); // Correct selector

        bookList.forEach((book) => {
          const title = book
            .querySelector(".text-title")
            .textContent.toLowerCase(); // Match title selector
          if (title.includes(searchInput)) {
            book.style.display = "block"; // Show matching books
          } else {
            book.style.display = "none"; // Hide non-matching books
          }
        });
      }
    </script>
  </body>
</html>
